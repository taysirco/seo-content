# Google Gemini AI (required — at least one key)
GEMINI_API_KEY=your_gemini_api_key_here
# Multiple keys for higher throughput (comma-separated, optional)
GEMINI_API_KEYS=key1,key2,key3

# Serper.dev SERP API (for automatic Google search results)
SERPER_API_KEY=your_serper_api_key_here

# Firebase Client SDK (for cloud project persistence + analytics)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Firebase Admin SDK (server-side — service account credentials)
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Google Search Console (optional — for self-healing engine)
GSC_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GSC_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
GSC_SITE_URL=https://example.com

# Cron job secret (optional — secures /api/cron/self-heal)
CRON_SECRET=your_random_secret_here

# IndexNow instant indexing (optional — auto-generated if not set)
INDEXNOW_KEY=

# Google Indexing API (optional — requires service account)
GOOGLE_INDEXING_KEY=

# Base URL for self-referencing API calls (auto-detected on Vercel)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
